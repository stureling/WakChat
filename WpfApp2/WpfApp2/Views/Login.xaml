<Window x:Class="WpfApp2.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:vm="clr-namespace:WpfApp2.Viewmodels"
        mc:Ignorable="d"
        Title="Login" Height="160" Width="300" Style="{StaticResource Darkmodebg}" WindowStyle="None" >
    <Window.Resources>
        <vm:LoginViewmodel x:Key="viewModel"/>
    </Window.Resources>
    <Grid Margin="-1,0,1,0" Cursor="Arrow">
        <Button Content="Exit" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75"  Style="{StaticResource Darkmodebtn}" Command="{Binding Path=ExitWindowCommand, Source={StaticResource viewModel}}"/>
        <Button Content="Enter" HorizontalAlignment="Right" Click="Enter_Click" Margin="207,122,10,10" VerticalAlignment="Bottom" Width="75" Style="{StaticResource Darkmodebtn}"/>
        <TextBox Height="23" Margin="86,34,86,95" TextWrapping="Wrap" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Cursor="Pen" Style="{StaticResource Darkmodetxt}" HorizontalAlignment="Center"/>
        <TextBox Height="23" Margin="86,84,86,45" TextWrapping="Wrap" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Cursor="Pen" Style="{StaticResource Darkmodetxt}" HorizontalAlignment="Center">
            <TextBox.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.OpacityMask>
        </TextBox>
        <TextBlock HorizontalAlignment="Center" Margin="118,17,117,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" Width="57" Style="{StaticResource Darkmodetitle}"/>
        <TextBlock HorizontalAlignment="Center" Margin="129,67,131,0" TextWrapping="Wrap" Text="Port:" VerticalAlignment="Top" Style="{StaticResource Darkmodetitle}"/>
    </Grid>
</Window>
